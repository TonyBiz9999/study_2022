package chap03;

public class p01_01_array {
public static void main(String[] args) {
//	Khai báo mảng:
	int [] arrayOne;
	int arayTwo[];
//	Khai báo mảng và cấp vùng nhớ:
//	int[]arrayInt = new int[5];
//	arrayInt[0] 		=10;
//	arrayInt[1] 		=11;
//	arrayInt[2]		=12;
//	arrayInt[3] 		=13;
//	arrayInt[4]		 =14;
	int [] arrayInt = {21,22,23,24,25};
	
	System.out.println("Phần tử 1 :"+arrayInt[0]);
	System.out.println("Phần tử 2 :"+arrayInt[1]);
	System.out.println("Phần tử 3 :"+arrayInt[2]);
	System.out.println("Phần tử 4 :"+arrayInt[3]);
	System.out.println("Phần tử 5 :"+arrayInt[4]);
	System.out.println("Chieu dai mang :"+arrayInt.length);
	System.out.println("Phan tu cuoi cung cua  mang :"+arrayInt[arrayInt.length -1]);
	System.out.println("Phan tu o giua cua  mang :"+arrayInt[(arrayInt.length -1)/2]);
	
//	for(int i=0; i<arrayInt.length; i++) {
//		System.out.println("Phan tu thu "+(i) + " cua mang la : "+arrayInt[i]);
//		System.out.printf ("Phan tu thu %d : %d %n",i, arrayInt[i]);
//	}
	for(int n : arrayInt) {
		System.out.println (n);
}
}
public static void Sudy001(String[] args) {
//	Khai báo mảng:
	int [] arrayOne;
	int arayTwo[];
//	Khai báo mảng và cấp vùng nhớ:
//	int[]arrayInt = new int[5];
//	arrayInt[0] 		=10;
//	arrayInt[1] 		=11;
//	arrayInt[2]		=12;
//	arrayInt[3] 		=13;
//	arrayInt[4]		 =14;
	int [] arrayInt = {21,22,23,24};
	String [] arrayStr	= {"C++","Java", "Python", "Kotlin"};
	
	System.out.println("Phần tử 1 :"+arrayInt[0]);
	System.out.println("Phần tử 2 :"+arrayInt[1]);
	System.out.println("Phần tử 3 :"+arrayInt[2]);
	System.out.println("Phần tử 4 :"+arrayInt[3]);
	System.out.println("Phần tử 5 :"+arrayInt[4]);
	System.out.println("Phần tử 1 :"+arrayStr[0]);
	System.out.println("Phần tử 2 :"+arrayStr[1]);
	System.out.println("Phần tử 3 :"+arrayStr[2]);
	System.out.println("Phần tử 4 :"+arrayStr [3]);
}
