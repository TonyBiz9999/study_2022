package chap03;

public class p01_01_array {
public static void main(String[] args) {
//	Khai báo mảng:
	int [] arrayOne;
	int arayTwo[];
//	Khai báo mảng và cấp vùng nhớ:
	int[]arrayInt = new int[5];
//	arrayInt[0] 		=10;
//	arrayInt[1] 		=11;
//	arrayInt[2]		=12;
//	arrayInt[3] 		=13;
//	arrayInt[4]		 =14;
	int [] arrayInt1 = {21,22,23,24,25};
	
	System.out.println("Phần tử 1 :"+arrayInt[0]);
	System.out.println("Phần tử 2 :"+arrayInt[1]);
	System.out.println("Phần tử 3 :"+arrayInt[2]);
	System.out.println("Phần tử 4 :"+arrayInt[3]);
	System.out.println("Phần tử 5 :"+arrayInt[4]);
	System.out.println("Chieu dai mang :"+arrayInt.length);
	
}

