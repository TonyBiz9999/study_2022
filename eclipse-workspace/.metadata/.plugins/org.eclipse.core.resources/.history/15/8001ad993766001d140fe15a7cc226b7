package chap03;

public class prac_03_03 {
public static void main(String[] args) {
	int[] arrInt	= {8, 2, 10, 8, 3};
	String flag ="không tồn tại";
	int a = arrInt.length;
	for (int i = 1; i < a-1; i++) {
		if( arrInt[i]==arrInt[i-1]+arrInt[i+1]) {
				flag ="tồn tại";
	}	
}	

	System.out.println(flag);
}
}